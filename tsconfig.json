{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "lib": ["es2020", "dom"],
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }